#Programa que ordena un arreglo mediante bubble sort
main()
array<int,9> arr = [8,4,1,3,2,9,6,5,7];

#Dimension del arreglo
int n = 9;
#Variables para los ciclos
int i = 0;
int j = 0;

#Variabla auxiliar que guarda temporalmente el valor anterior
int temp = 0;

#Ciclo que recorre el arreglo y hace el bubble sort
for(0,8,1)
	j = 1;
	for(j,8-i,1)
		if((arr[j-1]) > (arr[j]))
			temp = arr[j-1];
			arr[j-1] = arr[j];
			arr[j] = temp;
		end
		j = j + 1;
	end
	i = i + 1;
end

#Ciclo que imprime los valores del arreglo
i = 0;
while(i < 9)
	print(arr[i]);
	i = i + 1;
end

end
