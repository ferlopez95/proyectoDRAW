
#Ejemplo 2
main()

	Draw d = Draw();
	d.setPosition(-50,-50);
	array <int,3,3> cl = [1,50,67,60,108,179,129,207,224];
	int i = 0;
	int c = 0;
	int f = 150;
	d.speed(0);
	for(i,400,1)
		d.setColor(cl[c,0],cl[c,1],cl[c,2]);
		d.forward(f);
		d.left(98);
		f = f - 1;
		i = i + 1;
		if(c == 2)
		 c = 0;
		else
		 c = c + 1;
		end
	end
end
